<script>
const msg="From the first moment you entered my life, every ordinary day turned special. Today I want to ask you something straight from my heart.";
let i=0;
function type(){
  if(i<msg.length){
    document.getElementById("text").innerHTML+=msg.charAt(i);
    i++;
    setTimeout(type,40);
  }
}
type();
function reveal(){
  document.getElementById("final").style.display="block";
}
